---
import { basics } from "@cv"

interface Props {
  title: string
}

const { title } = Astro.props

const { image, summary } = basics
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  @media print {
    .no-print {
      display: none !important;
    }
  }

  .print {
    display: none !important;
  }

  @media print {
    .print {
      display: block !important;
    }
  }

  /* Resume Content Styles */
  section[data-section="experience"] ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  section[data-section="experience"] article h3 {
    font-weight: 500;
    color: #111;
    font-size: 1.125rem;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    margin: 0;
    line-height: 1.5;
  }

  section[data-section="experience"] article h4 {
    color: #222;
    font-weight: 400;
    font-size: 1rem;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    margin: 0;
    line-height: 1.5;
  }

  section[data-section="experience"] article {
    display: flex;
    flex-direction: column;
  }

  section[data-section="experience"] header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
    gap: 1rem;
  }

  section[data-section="experience"] header div {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  section[data-section="experience"] header div h3 {
    margin-bottom: 0;
  }

  section[data-section="experience"] header div h4 {
    margin-top: 0;
    margin-bottom: 0;
  }

  section[data-section="experience"] time {
    color: #555;
    font-size: 0.85rem;
    white-space: nowrap;
    font-weight: 400;
    line-height: 1.5;
    margin-top: 0;
    align-self: flex-start;
  }

  section[data-section="experience"] footer {
    margin-top: 0;
    margin-bottom: 0;
  }

  section[data-section="experience"] footer p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    margin-top: 0;
    text-wrap: pretty;
    font-weight: 400;
  }

  section[data-section="education"] ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  section[data-section="education"] article h3 {
    font-weight: 600;
    font-size: 1.125rem;
    color: #111;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    margin: 0;
  }

  section[data-section="education"] header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  section[data-section="education"] footer p {
    color: #666;
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
    font-weight: 400;
  }

  section[data-section="projects"] ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  section[data-section="projects"] article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  section[data-section="projects"] article header {
    flex: 1;
    margin-bottom: 0;
  }

  section[data-section="projects"] article h3 {
    margin-bottom: 4px;
    font-weight: 600;
    font-size: 1.125rem;
    color: #111;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    margin-top: 0;
  }

  section[data-section="projects"] article a {
    color: #111;
    text-decoration: none;
  }

  section[data-section="projects"] article a:hover {
    text-decoration: underline;
  }

  section[data-section="projects"] article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
    color: #666;
    text-wrap: pretty;
    font-weight: 400;
  }

  section[data-section="projects"] article h3 span {
    color: rgb(0, 188, 47);
  }

  section[data-section="projects"] footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  section[data-section="projects"] footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  section[data-section="skills"] ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  section[data-section="skills"] li {
    margin: 0;
    padding: 0;
  }

  section[data-section="skills"] li span {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    display: inline-block;
  }
</style>
