    {
      projects.map(({ url, description, highlights, name, isActive }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a href={url} title={`Ver el proyecto ${name}`}>
                    {name}
                  </a>
                  {isActive && <span>â€¢</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlight) => {
                  return <span>{highlight}</span>
                })}
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

